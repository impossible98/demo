# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
trim_trailing_whitespace = true

[*.cjs]
indent_size = 2

[*.go]
indent_style = tab

[*.yml]
indent_size = 2

[Makefile]
indent_style = tab
